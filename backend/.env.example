# Backend configuration (no Prisma)

# Server
SERVER_PORT=8000
SCRAPER_ENABLED=false

# MongoDB (use localhost for local dev; Docker Compose overrides with mongodb://mongo)
MONGODB_URI=mongodb://127.0.0.1:27017/scraped
MONGODB_DB=scraped

# Netflix scraper (optional testing)
USE_NETFLIX_SAMPLE=false
NETFLIX_SAMPLE_PATH=./sample/tudum-top-10-global-table.html

# IMDb API (optional)
# IMDBAPI_BASE_URL=https://api.imdbapi.dev
# IMDBAPI_API_KEY=
# IMDBAPI_AUTH_STYLE=header